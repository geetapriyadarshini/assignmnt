<p id="notice"><%= notice %></p>

<h2 align="center">Doctors Near You</h2>
</br></br>

<div class="container">
    <div class="row">
        <% @doctors.each do |doctor| %> 
        <div class="col-md-3">
            <div class="doctor1">
                <img src="<%= doctor.image %>">
                <div class="doctor_image">
                    <h2 align="center"><%= doctor.name %></h2>
                </div>
                <div class="doctor_details">
                    <h4 align="center" class="doctor_content"><%=doctor.speciality %></h4>
                    <h4 align="center" class="doctor_content"><%=doctor.gender %></h4>
                     <%= button_to 'Book an Appointment', doctor, class: "btn btn-link read-more", :method => :get %>
                    
                </div>   
            </div> 
        </div>
        <% end %>
    </div>
</div>
</section>

